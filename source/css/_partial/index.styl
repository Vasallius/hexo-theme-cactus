.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 16px
      min-width: 100px
      color: $color-meta
      

table
  border-collapse: collapse;
  table-layout: fixed

td
  padding: 0.5rem;
  text-align: left;

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      border-style: solid;
      border-color: red;
      margin-bottom: 5px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    p
      display: inline
